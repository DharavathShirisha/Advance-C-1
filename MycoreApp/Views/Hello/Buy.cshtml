@if (Model != null)
{
    <div class="row">
        @foreach (var i in Model)
        {
            <div class="col-md-4">
                <img src="/@i.Pimage" />
                <div>@i.Pid</div>
                <div>@i.Pname</div>
                <div>@i.Price</div>
                <div>@i.Description</div>

            </div>
             }
    </div>
}
<form method="post">
    <input type="text" name="qty" class="form-control" />
    <input type="submit" name="Confirm Buy" class="btn btn-primary" />
</form>
<div class="btn btn-info">
    @ViewData["r"]
</div>